<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/toolbar">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="10pt"
                    android:orientation="vertical">
                    <!--  Username -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.10"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/inputLayout1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/TextLabel">

                            <android.support.v7.widget.AppCompatEditText
                                android:id="@+id/input_old_passwrd"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/passwrd_icon"
                                android:hint="Old Password*"
                                android:drawablePadding="5dp"
                                android:imeOptions="actionNext|flagNoExtractUi"
                                android:inputType="text|textNoSuggestions"
                                android:padding="15dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/activity_horizontal_margin"
                                android:theme="@style/autocompleteHome" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.10"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">
                        <!--  Password Label -->
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/inputLayout2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/TextLabel">

                            <android.support.v7.widget.AppCompatEditText
                                android:id="@+id/input_new_password"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/passwrd_icon"
                                android:ems="10"
                                android:drawablePadding="5dp"
                                android:hint="New Password*"
                                android:imeOptions="actionDone|flagNoExtractUi"
                                android:inputType="textPassword"
                                android:padding="15dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/activity_horizontal_margin"
                                android:theme="@style/autocompleteHome" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.10"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">
                        <!--  Password Label -->
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/inputLayout3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/TextLabel">

                            <android.support.v7.widget.AppCompatEditText
                                android:id="@+id/input_confirm_password"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/passwrd_icon"
                                android:ems="10"
                                android:drawablePadding="5dp"
                                android:hint="Confirm Password*"
                                android:imeOptions="actionDone|flagNoExtractUi"
                                android:inputType="textPassword"
                                android:padding="15dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/activity_horizontal_margin"
                                android:theme="@style/autocompleteHome" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:padding="15dp">

                        <Button
                            android:id="@+id/btn_change_pwd_submit"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/round_buttonn"
                            android:onClick="change_pwd_submit"
                            android:text="Submit"
                            android:textAllCaps="false"
                            android:textColor="#fff"
                            android:textSize="8pt" />


                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>


</RelativeLayout>

