<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_fuel_reports"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="snsystems.obd.fueltrack.FuelReportsActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/toolbar">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/maintenaceReportsRecyclerView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8pt"
        android:layout_marginRight="10pt"
        android:clickable="true"
        android:onClick="displayCalculations"
        android:src="@drawable/ic_reorder_black_24dp"
        app:backgroundTint="@color/primaryColor"
        app:layout_anchorGravity="bottom"
        app:rippleColor="@color/primaryColorDark" />


</RelativeLayout>
