<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/screen_color">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40pt"
                    android:background="@color/primaryColor">

                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/aa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6pt"
                    android:layout_marginRight="6pt"
                    android:layout_marginTop="3pt"
                    android:layout_marginBottom="3pt"
                    card_view:cardCornerRadius="3dp"
                    >

                    <RelativeLayout
                        android:id="@+id/asd"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10pt">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Personal Details"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/fentBlack" />

                        <View
                            android:id="@+id/va"
                            android:layout_width="fill_parent"
                            android:layout_height="0.1pt"
                            android:layout_below="@+id/textView7"
                            android:layout_marginTop="3pt"
                            android:background="@color/screen_color" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txt_full_name"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/va"
                            android:layout_marginTop="3pt"

                            android:theme="@style/TextLabel">

                            <android.support.v7.widget.AppCompatEditText
                                android:id="@+id/input_full_name"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_person_black_24dp"
                                android:drawablePadding="4dp"
                                android:hint="Name*"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                                android:maxLength="30"
                                android:imeOptions="actionNext|flagNoExtractUi"
                                android:inputType="textCapWords|textNoSuggestions"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:theme="@style/autocompleteHome" />
                        </android.support.design.widget.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout_u_4"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_full_name"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/txt_birth_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:theme="@style/TextLabel">

                                    <android.support.v7.widget.AppCompatEditText
                                        android:id="@+id/input_birth_date"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"

                                        android:clickable="false"
                                        android:drawableLeft="@drawable/ic_cake_black_24dp"
                                        android:drawablePadding="4dp"
                                        android:focusable="false"
                                        android:focusableInTouchMode="false"
                                        android:hint="Birthdate*"
                                        android:imeOptions="actionNext|flagNoExtractUi"
                                        android:inputType="text|textNoSuggestions"

                                        android:singleLine="true"
                                        android:textColor="@color/black"
                                        android:theme="@style/autocompleteHome" />
                                </android.support.design.widget.TextInputLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="3"
                                android:clickable="true"
                                android:onClick="selectBirthDate">

                                <RelativeLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent">

                                    <ImageView
                                        android:layout_width="25pt"
                                        android:layout_height="25pt"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:src="@drawable/ic_select_date" />
                                </RelativeLayout>

                            </LinearLayout>


                        </LinearLayout>


                    </RelativeLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/ab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/aa"
                    android:layout_marginLeft="6pt"
                    android:layout_marginRight="6pt"
                    android:layout_marginTop="3pt"
                    android:layout_marginBottom="3pt"
                    card_view:cardCornerRadius="3dp"
                   >

                    <RelativeLayout
                        android:id="@+id/asa"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10pt">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact Details"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/fentBlack" />

                        <View
                            android:id="@+id/vb"
                            android:layout_width="fill_parent"
                            android:layout_height="0.1pt"
                            android:layout_below="@+id/textView3"
                            android:layout_marginTop="3pt"
                            android:background="@color/screen_color" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txt_phone_no"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView3"
                            android:layout_marginTop="3pt"
                            android:theme="@style/TextLabel">

                            <android.support.v7.widget.AppCompatEditText
                                android:id="@+id/input_phone_no"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:drawableLeft="@drawable/ic_callll_black_24dp"
                                android:drawablePadding="4dp"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:hint="Phone Number*"
                                android:digits="+0123456789"
                                android:maxLength="13"
                                android:imeOptions="actionNext|flagNoExtractUi"
                                android:inputType="phone|textNoSuggestions"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:theme="@style/autocompleteHome" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txt_email_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_phone_no"
                            android:theme="@style/TextLabel">

                            <android.support.v7.widget.AppCompatEditText
                                android:id="@+id/input_email_id"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:drawableLeft="@drawable/ic_email_black_24dp"
                                android:drawablePadding="4dp"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:digits="abcdefghijklmnopqrstuvwxyz@."
                                android:hint="Email ID*"
                                android:imeOptions="actionNext|flagNoExtractUi"
                                android:inputType="textEmailAddress|textNoSuggestions"

                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:theme="@style/autocompleteHome" />
                        </android.support.design.widget.TextInputLayout>


                    </RelativeLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/ac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ab"
                    android:layout_marginLeft="6pt"
                    android:layout_marginRight="6pt"
                    android:layout_marginTop="3pt"
                    android:layout_marginBottom="3pt"
                    card_view:cardCornerRadius="3dp">

                    <RelativeLayout
                        android:id="@+id/ase"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10pt">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address Details"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/fentBlack" />

                        <View
                            android:id="@+id/vc"
                            android:layout_width="fill_parent"
                            android:layout_height="0.1pt"
                            android:layout_below="@+id/textView4"
                            android:layout_marginTop="3pt"
                            android:background="@color/screen_color" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txt_add_1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/vc"
                            android:theme="@style/TextLabel">

                            <android.support.v7.widget.AppCompatEditText
                                android:id="@+id/input_add_1"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_home_black_24dp"
                                android:drawablePadding="4dp"
                                android:hint="Address*"
                                android:maxLength="150"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789, # ' . , - /"
                                android:imeOptions="actionNext|flagNoExtractUi"
                                android:inputType="textPostalAddress|textCapSentences|textNoSuggestions"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:theme="@style/autocompleteHome" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txt_city"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_add_1"
                            android:theme="@style/TextLabel">

                            <android.support.v7.widget.AppCompatEditText
                                android:id="@+id/input_city"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_location_city_black_24dp"
                                android:drawablePadding="4dp"
                                android:hint="City*"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ, -"
                                android:imeOptions="actionNext|flagNoExtractUi"
                                android:maxLength="20"
                                android:inputType="textCapSentences|textNoSuggestions"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:theme="@style/autocompleteHome" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txt_state"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_city"
                            android:theme="@style/TextLabel">

                            <android.support.v7.widget.AppCompatEditText
                                android:id="@+id/input_state"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_radio_button_checked_black_24dp"
                                android:drawablePadding="4dp"
                                android:hint="State*"
                                android:maxLength="30"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ, -"
                                android:imeOptions="actionNext|flagNoExtractUi"
                                android:inputType="textCapSentences|textNoSuggestions"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:theme="@style/autocompleteHome" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/txt_pin"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_state"
                            android:theme="@style/TextLabel">

                            <android.support.v7.widget.AppCompatEditText
                                android:id="@+id/input_pin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_fiber_pin_black_24dp"
                                android:drawablePadding="4dp"
                                android:hint="Pin Code*"
                                android:digits="0123456789"
                                android:imeOptions="actionDone|flagNoExtractUi"
                                android:inputType="phone|textNoSuggestions"
                                android:maxLength="6"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:theme="@style/autocompleteHome" />
                        </android.support.design.widget.TextInputLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <Button
                    android:id="@+id/btn_user_submit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ac"
                    android:layout_marginLeft="6pt"
                    android:layout_marginRight="6pt"
                    android:layout_marginTop="3pt"
                    android:textAllCaps="false"
                    android:background="@drawable/round_buttonn"
                    android:onClick="submit_profile"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Submit"
                    android:textColor="@color/colorWhite" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="20pt"
                    android:layout_below="@+id/btn_user_submit" />

            </RelativeLayout>

        </ScrollView>


    </RelativeLayout>

</RelativeLayout>