<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/aa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/a"
            android:layout_width="fill_parent"
            android:visibility="gone"
            android:layout_height="30pt">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <TextView
                        android:id="@+id/textViewFuelLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4pt"
                        android:layout_weight="1"
                        android:text="Fuel Level"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/fentBlack" />

                    <ImageView
                        android:id="@+id/fuelInfoDialog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3pt"
                        android:layout_weight="2"
                        android:src="@drawable/ic_help_outline_black_24dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.5">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">

                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/compatSwitchFuelLevel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:clickable="false" />


                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:id="@+id/setFuelLevel"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:clickable="true">

                            <TextView
                                android:id="@+id/spinnerFuelLevel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="4pt"
                                android:text="Set Fuel Level">

                            </TextView>
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2pt"
            android:layout_below="@+id/a"
            android:background="@color/screen_color" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ab"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aa">

        <RelativeLayout
            android:id="@+id/b"
            android:layout_width="fill_parent"
            android:layout_height="30pt">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <TextView
                        android:id="@+id/textViewSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4pt"
                        android:layout_weight="1"
                        android:text="Speed"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/fentBlack" />

                    <ImageView
                        android:id="@+id/speedInfoDialog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3pt"
                        android:layout_weight="2"
                        android:src="@drawable/ic_help_outline_black_24dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.5">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">

                            <android.support.v7.widget.SwitchCompat
                                android:id="@+id/compatSwitchSpeed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:clickable="false" />


                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:id="@+id/setSpeedLevel"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:clickable="true">

                            <TextView
                                android:id="@+id/spinnerSpeed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_centerVertical="true"
                                android:layout_marginLeft="4pt"
                                android:text="Set Speed">

                            </TextView>
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.2pt"
            android:layout_below="@+id/b"
            android:background="@color/screen_color" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ac"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ab">

        <RelativeLayout
            android:id="@+id/c"
            android:layout_width="fill_parent"
            android:layout_height="30pt">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <TextView
                        android:id="@+id/textViewRpm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4pt"
                        android:layout_weight="1"
                        android:text="RPM"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/fentBlack" />

                    <ImageView
                        android:id="@+id/rpmInfoDialog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3pt"
