<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FeedbackActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/toolbar">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="15pt">

                <EditText
                    android:id="@+id/your_feedback_editext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editext_border"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ.() "
                    android:gravity="top"
                    android:hint="Enter your feedback, suggestion, problems.*"
                    android:imeOptions="actionDone"
                    android:lines="10"
                    android:maxLength="150"
                    android:paddingLeft="5pt"
                    android:paddingTop="5pt">

                </EditText>
                <!--<RelativeLayout-->
                <!--android:id="@+id/as"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="20pt"-->
                <!--android:background="@color/colorTransperent"-->
                <!--android:layout_marginTop="3pt"-->
                <!--android:onClick="selectLovProblem"-->
                <!--android:layout_below="@+id/your_feedback_editext">-->

                <!--<TextView-->
                <!--android:id="@+id/lovProblemTextView"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:text="Select your problem"-->
                <!--android:textColor="@color/colorWhite"-->

                <!--android:layout_centerHorizontal="true"/>-->

                <!--</RelativeLayout>-->

                <LinearLayout
                    android:id="@+id/aa"
                    android:layout_width="fill_parent"
                    android:layout_height="20pt"
                    android:layout_below="@+id/your_feedback_editext"
                    android:layout_marginTop="5pt"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/round_buttonn"
                            android:onClick="submitFeedback"
                            android:text="Submit"
                            android:textColor="@color/colorWhite" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30pt"
                    android:layout_below="@+id/aa">

                </LinearLayout>
            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>
</RelativeLayout>
